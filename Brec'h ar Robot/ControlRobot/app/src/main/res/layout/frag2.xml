<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="35dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/border_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline10">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="50sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="50sp"
                android:layout_marginBottom="10sp"
                android:text="Gestion du bras et de la pince"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

        </TableRow>

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="219dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="15sp"
                android:layout_marginBottom="5sp">

                <ImageButton
                    android:id="@+id/pince_open"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="10sp"
                    android:background="@drawable/open" />

                <ImageButton
                    android:id="@+id/pince_close"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp"
                    android:background="@drawable/close" />

                <ImageButton
                    android:id="@+id/pince_RG"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp"
                    android:background="@drawable/left" />

                <ImageButton
                    android:id="@+id/pince_RD"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp"
                    android:background="@drawable/right" />

            </TableRow>

            <TableRow
                android:id="@+id/TableRow2Bras3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20sp"
                android:layout_marginTop="5sp"
                android:layout_marginEnd="20sp"
                android:layout_marginBottom="5sp">

                <ImageButton
                    android:id="@+id/bras_TD"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="10sp"
                    android:background="@drawable/turn_right" />

                <ImageButton
                    android:id="@+id/bras_DAb"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp"
                    android:background="@drawable/descendre_ab" />

                <ImageButton
                    android:id="@+id/bras_RD"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp"
                    android:background="@drawable/rotation_right" />

                <ImageButton
                    android:id="@+id/bras_DB"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10sp"
                    android:background="@drawable/descendre_b" />


            </TableRow>

            <TableRow
                android:id="@+id/TableRow2Bras1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20sp"
                android:layout_marginTop="5sp"
                android:layout_marginEnd="20sp"
                android:layout_marginBottom="5sp">

                <ImageButton
                    android:id="@+id/bras_TG"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="10sp"
                    android:background="@drawable/turn_left" />

                <ImageButton
                    android:id="@+id/bras_LAb"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp"
                    android:background="@drawable/monter_ab" />

                <ImageButton
                    android:id="@+id/bras_RG"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp"
                    android:background="@drawable/rotation_left" />

                <ImageButton
                    android:id="@+id/bras_LB"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10sp"
                    android:background="@drawable/monter_b" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="25sp"
                android:layout_marginLeft="10sp"
                android:layout_marginEnd="25sp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="10sp" />

        </TableLayout>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>